{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "skipLibCheck": true,
    "declaration": true,
    "paths": {
      "*": ["./node_modules/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "outDir": "./dist"
  },
  "include": ["./**/*.ts", "./*.ts"],
  "exclude": ["node_modules", "data"]
}
